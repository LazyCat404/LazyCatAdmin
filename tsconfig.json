{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "@":["./src"],
      "@types":["./src/@types"],
      "@api":["./src/api"],
      "@/*": ["./src/*"],
    }
  },
  "vueCompilerOptions": {
    // "experimentalDisableTemplateSupport": true  // 此配置临时解决volar报错(已在V0.37.3版本修复)
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue",
    "auto-imports.d.ts" 
  ]
}
